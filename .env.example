# Google OAuth2 credentials (OAuth client ID type: Web application)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Refresh token obtained from the OAuth consent flow for the channel owner
GOOGLE_REFRESH_TOKEN=

# Google Sheets configuration
GOOGLE_SHEETS_SPREADSHEET_ID=
GOOGLE_SHEETS_QUEUE_RANGE=Queue!A2:K
GOOGLE_SHEETS_LOG_SHEET=Log

# Scheduling configuration
# Daily publish time in IANA timezone (used for template defaults), e.g., 09:00 Asia/Kolkata
DAILY_PUBLISH_TIME=09:00
DAILY_PUBLISH_TZ=Asia/Kolkata

# Default privacy for immediate publish: public | unlisted | private
DEFAULT_PRIVACY=private

# Retry settings (minutes)
RETRY_DELAY_MINUTES=10

# Alert webhook (e.g., Slack/Discord/Teams incoming webhook URL)
ALERT_WEBHOOK_URL=
ALERT_RECIPIENT_NAME=Owner
